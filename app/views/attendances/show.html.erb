<div class="contain-blue-box">
<div class="blue-box-show">
  <div class="center-box-show">

      <div class="row justify-content-left">
        <p class="show-text">
          <strong>User:</strong>
          <%= User.where(id: @attendance.user_id).last.first_name %>
          <%= User.where(id: @attendance.user_id).last.last_name %>
          
        </p>
      </div>

      <div class="row justify-content-left">
        <p class="show-text">
          <strong>User Email:</strong>
          <%= User.where(id: @attendance.user_id).last.email %>

        </p>
      </div>

      <div class="row justify-content-left">
        <p class="show-text">
          <strong>Event:</strong>
          <%= Event.where(id: @attendance.event_id).last.event_title %>
        </p>
      </div>

      <div class="row justify-content-left last-row-pad" >
        <p class="show-text">
          <strong>Points:</strong>
          <%= @attendance.points %>
        </p>
      </div>

      <br>


  </div>

<div>
<div>

<div class="d-flex justify-content-center">
