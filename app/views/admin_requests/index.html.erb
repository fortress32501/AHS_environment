<p id="notice"><%= notice %></p>

<h1>Admin Requests</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Request status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_requests.each do |admin_request| %>
      <tr>
        <td><%= admin_request.user_id %></td>
        <td><%= admin_request.request_status %></td>
        <td><%= admin_request.request_reason %></td>
        <td><%= link_to 'Show', admin_request %></td>
        <td><%= link_to 'Edit', edit_admin_request_path(admin_request) %></td>
        <td><%= link_to 'Destroy', admin_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Admin Request', new_admin_request_path %>
