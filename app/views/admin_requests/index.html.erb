<p id="notice"><%= notice %></p>

<h1>Admin Requests</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Request status</th>
      <th>Request reason</th>
      <th>Requested at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_requests.each do |admin_request| %>
      <tr>
        <td><%= admin_request.user_id %></td>
        <td><%= admin_request.request_status %></td>
        <td><%= admin_request.request_reason %></td>
        <td><%= admin_request.created_at %></td>
        <% if current_user.is_admin %>
            <td><%= link_to 'Review', admin_request %></td>
        <% end %>
        <!-- regular users should only be able to edit their own requests -->
        <% if !current_user.is_admin && admin_request.user_id == current_user.id %>
            <td><%= link_to 'Edit', edit_admin_request_path(admin_request) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

