<p id="notice"><%= notice %></p>

<h1>Rankings</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Point total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rankings.each do |ranking| %>
      <tr>
        <td><%= ranking.title %></td>
        <td><%= ranking.point_total %></td>
        <td><%= link_to 'Show', ranking %></td>
        <td><%= link_to 'Edit', edit_ranking_path(ranking) %></td>
        <td><%= link_to 'Destroy', ranking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Points</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
      <% @list_rankings.each do |list_rankings| %>
        <tr>
          <td><%= list_rankings.first_name %></td>
          <td><%= list_rankings.last_name %></td>
          <td><%= list_rankings.email %></td>
          <td><%= list_rankings.point %></td>
        </tr>
      <% end %>
    </tbody>
  </table>  

</table>


<br>

