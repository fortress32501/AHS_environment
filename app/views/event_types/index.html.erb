<p id="notice"><%= notice %></p>

<h1>Event Types</h1>

<table class="table-style" style="overflow-x: auto;">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_types.each do |event_type| %>
      <tr>
        <td><%= event_type.type_name %></td>
        <td><%= event_type.description %></td>
        <td> 
          <div>
            <div style="width:10px; height:10px; background-color: <%=event_type.color%>; display: inline-block;"></div>
            <div style="display: inline-block;"><%= event_type.color %></div>
          </div>
        </td>
        
        <td><%= link_to 'Show', event_type, class: "button-style" %></td>
        <% if current_user.is_admin %>
          <td><%= link_to 'Edit', edit_event_type_path(event_type), class: "button-style" %></td>
          <td><%= button_to 'Destroy', event_type, method: :delete, data: { confirm: 'Are you sure?' }, class: "button-style" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user.is_admin %>
  <div class="d-flex justify-content-center">
    <%= link_to 'New Event Type', new_event_type_path, class: "button-style-blue" %>
  </div>
<% end %>

<div class="d-flex justify-content-center">
  <%= link_to 'Calendar', events_path, class: "button-style-blue" %>
</div>
