  </div>

  <div class="field">
    <%= form.label :event_start %>
    <%= form.datetime_select :event_start %>
  </div>

  <div class="field">
    <%= form.label :event_end %>
    <%= form.datetime_select :event_end %>
  </div>

  <div class="field">
    <%= form.label :event_title %>
    <%= form.text_field :event_title %>
  </div>

  <div class="field">
    <%= form.label :event_location %>
    <%= form.text_field :event_location %>
